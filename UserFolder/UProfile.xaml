<Page x:Class="Castle.UserFolder.UProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Castle.SomeCode.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="1040" d:DesignWidth="1780" 
      Title="Профиль пользователя">

    <Page.Resources>
        <local:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Профиль пользователя" 
                   FontSize="48" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Bold Italic" 
                   Foreground="#00B4D8" 
                   Grid.ColumnSpan="3" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Фото пользователя -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Margin="0,0,20,0">
            <Image x:Name="UserPhoto" 
                   Source="{Binding UserPhotos.FirstOrDefault.Photo, Converter={StaticResource ByteArrayToImageConverter}}" 
                   Width="150" Height="150" Stretch="UniformToFill" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Content="Загрузить фото" 
                    Click="UploadPhoto_Click" 
                    Style="{StaticResource MaterialDesignFlatButton}" 
                    Margin="0,10,0,0" 
                    HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Логин (нередактируемый) -->
        <TextBlock Text="Логин" 
                   Grid.Row="1" Grid.Column="1" 
                   FontSize="24" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Italic" 
                   Margin="0,10,10,5"/>
        <TextBlock Text="{Binding Login}" 
                   Grid.Row="1" Grid.Column="2" 
                   FontSize="24" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Regular" 
                   Margin="0,10,0,5"/>

        <!-- Фамилия -->
        <TextBlock Text="Фамилия" 
                   Grid.Row="2" Grid.Column="1" 
                   FontSize="24" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Italic" 
                   Margin="0,10,10,5"/>
        <TextBox Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" 
                 Grid.Row="2" Grid.Column="2" 
                 FontSize="24" 
                 FontFamily="pack://application:,,,/Fonts/#Roboto Regular" 
                 Margin="0,10,0,5"/>

        <!-- Имя -->
        <TextBlock Text="Имя" 
                   Grid.Row="3" Grid.Column="1" 
                   FontSize="24" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Italic" 
                   Margin="0,10,10,5"/>
        <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                 Grid.Row="3" Grid.Column="2" 
                 FontSize="24" 
                 FontFamily="pack://application:,,,/Fonts/#Roboto Regular" 
                 Margin="0,10,0,5"/>

        <!-- Отчество -->
        <TextBlock Text="Отчество" 
                   Grid.Row="4" Grid.Column="1" 
                   FontSize="24" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Italic" 
                   Margin="0,10,10,5"/>
        <TextBox Text="{Binding Patronymic, UpdateSourceTrigger=PropertyChanged}" 
                 Grid.Row="4" Grid.Column="2" 
                 FontSize="24" 
                 FontFamily="pack://application:,,,/Fonts/#Roboto Regular" 
                 Margin="0,10,0,5"/>

        <!-- Электронная почта -->
        <TextBlock Text="Электронная почта" 
                   Grid.Row="5" Grid.Column="1" 
                   FontSize="24" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Italic" 
                   Margin="0,10,10,5"/>
        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                 Grid.Row="5" Grid.Column="2" 
                 FontSize="24" 
                 FontFamily="pack://application:,,,/Fonts/#Roboto Regular" 
                 Margin="0,10,0,5"/>

        <!-- Роль (нередактируемая) -->
        <TextBlock Text="Роль" 
                   Grid.Row="6" Grid.Column="1" 
                   FontSize="24" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Italic" 
                   Margin="0,10,10,5"/>
        <TextBlock Text="{Binding Roles.RoleName}" 
                   Grid.Row="6" Grid.Column="2" 
                   FontSize="24" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Regular" 
                   Margin="0,10,0,5"/>

        <!-- Склад (нередактируемый) -->
        <TextBlock Text="Склад" 
                   Grid.Row="7" Grid.Column="1" 
                   FontSize="24" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Italic" 
                   Margin="0,10,10,5"/>
        <TextBlock Text="{Binding Warehouse.HouseName}" 
                   Grid.Row="7" Grid.Column="2" 
                   FontSize="24" 
                   FontFamily="pack://application:,,,/Fonts/#Roboto Regular" 
                   Margin="0,10,0,5"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="8" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить изменения" 
                    Click="SaveChanges_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    Width="200" Height="50" 
                    FontSize="18" 
                    Margin="0,0,10,0"/>
            <Button Content="Сменить пароль" 
                    Click="ChangePassword_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    Width="200" Height="50" 
                    FontSize="18"/>
        </StackPanel>
    </Grid>
</Page>