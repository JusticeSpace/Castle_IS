<Window x:Class="Castle.UserFolder.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сменить пароль" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Старый пароль" Grid.Row="0" FontSize="16"/>
        <PasswordBox x:Name="OldPassword" Grid.Row="1" FontSize="16" Margin="0,5"/>
        <TextBlock Text="Новый пароль" Grid.Row="2" FontSize="16"/>
        <PasswordBox x:Name="NewPassword" Grid.Row="3" FontSize="16" Margin="0,5"/>
        <Button Content="Сменить" Click="ChangePassword_Click" Grid.Row="4" HorizontalAlignment="Right" Margin="0,20,0,0" Width="100" Height="40"/>
    </Grid>
</Window>